<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow.xsd">

 <input name="mixtureItemServiceRequest" required="true" />

 <action-state id="getMixtureItems">
 <evaluate
 expression="mixtureItemComponent.getMixtureItems(mixtureItemServiceRequest)"
 result="flowScope.mixtureItemServiceResponse" />
 <transition to="exit" />
 </action-state>

 <end-state id="exit">
 <output name="mixtureItemServiceResponse" />
 </end-state>
</flow>