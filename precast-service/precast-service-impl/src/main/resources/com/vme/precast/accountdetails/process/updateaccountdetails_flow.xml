<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow.xsd">

 <input name="accountDetailsServiceRequest" required="true" />

 <action-state id="validate">
 <evaluate
 expression="accountDetailsValidator.checkAccountDetailsDuplicate(accountDetailsServiceRequest)" />
 <evaluate expression="endValidation">
 <attribute name="name" value="endValidation"></attribute>
 </evaluate>
 <transition on="endValidation.success" to="updateAccountDetails" />
 </action-state>

 <action-state id="updateAccountDetails">
 <evaluate
 expression="accountDetailsComponent.updateAccountDetails(accountDetailsServiceRequest)"
 result="flowScope.accountDetailsServiceResponse" />
 <transition to="exit" />
 </action-state>

 <end-state id="exit">
 <output name="accountDetailsServiceResponse" />
 </end-state>
</flow>