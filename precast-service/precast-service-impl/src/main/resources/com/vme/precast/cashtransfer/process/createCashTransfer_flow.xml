<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow.xsd">

	<input name="cashTransferServiceRequest" required="true" />

	<action-state id="validate">
		<evaluate
			expression="cashTransferValidator.checkCashTransferDuplicate(cashTransferServiceRequest)" />
		<evaluate expression="endValidation">
			<attribute name="name" value="endValidation"></attribute>
		</evaluate>
		<transition on="endValidation.success"
			to="createCashTransfer" />
	</action-state>

	<action-state id="createCashTransfer">
		<evaluate
			expression="cashTransferComponent.createCashTransfer(cashTransferServiceRequest)"
			result="flowScope.cashTransferServiceResponse" />
		<transition to="exit" />
	</action-state>

	<end-state id="exit">
		<output name="cashTransferServiceResponse" />
	</end-state>
</flow>