<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow.xsd">

 <input name="mixtureServiceRequest" required="true" />

 <action-state id="deleteMixture">
 <evaluate
 expression="mixtureComponent.deleteMixture(mixtureServiceRequest)"
 result="flowScope.mixtureServiceResponse" />
 <transition to="exit" />
 </action-state>

 <end-state id="exit">
 <output name="mixtureServiceResponse" />
 </end-state>
</flow>