<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow.xsd">

	<input name="purchaseOrderServiceRequest" required="true" />

	<action-state id="validate">
		<evaluate
			expression="purchaseOrderValidator.isPurchaseOrderIssued(purchaseOrderServiceRequest)" />
		<evaluate expression="endValidation">
			<attribute name="name" value="endValidation"></attribute>
		</evaluate>
		<transition on="endValidation.success"
			to="closePurchaseOrder" />
	</action-state>

	<action-state id="closePurchaseOrder">
		<evaluate
			expression="purchaseOrderComponent.closePurchaseOrder(purchaseOrderServiceRequest)"
			result="flowScope.purchaseOrderServiceResponse" />
		<transition to="exit" />
	</action-state>

	<end-state id="exit">
		<output name="purchaseOrderServiceResponse" />
	</end-state>
</flow>