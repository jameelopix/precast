<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow.xsd">

 <input name="costCentreServiceRequest" required="true" />

 <action-state id="validate">
 <evaluate
 expression="costCentreValidator.checkCostCentreDuplicate(costCentreServiceRequest)" />
 <evaluate expression="endValidation">
 <attribute name="name" value="endValidation"></attribute>
 </evaluate>
 <transition on="endValidation.success" to="createCostCentre" />
 </action-state>

 <action-state id="createCostCentre">
 <evaluate
 expression="costCentreComponent.createCostCentre(costCentreServiceRequest)"
 result="flowScope.costCentreServiceResponse" />
 <transition to="exit" />
 </action-state>

 <end-state id="exit">
 <output name="costCentreServiceResponse" />
 </end-state>
</flow>