<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow.xsd">

 <input name="elementTypeServiceRequest" required="true" />

 <action-state id="validate">
 <evaluate
 expression="elementTypeValidator.checkElementTypeDuplicate(elementTypeServiceRequest)" />
 <evaluate expression="endValidation">
 <attribute name="name" value="endValidation"></attribute>
 </evaluate>
 <transition on="endValidation.success" to="updateElementType" />
 </action-state>

 <action-state id="updateElementType">
 <evaluate
 expression="elementTypeComponent.updateElementType(elementTypeServiceRequest)"
 result="flowScope.elementTypeServiceResponse" />
 <transition to="exit" />
 </action-state>

 <end-state id="exit">
 <output name="elementTypeServiceResponse" />
 </end-state>
</flow>