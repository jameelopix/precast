<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow.xsd">

 <input name="steelDetailsServiceRequest" required="true" />

 <action-state id="deleteSteelDetails">
 <evaluate
 expression="steelDetailsComponent.deleteSteelDetails(steelDetailsServiceRequest)"
 result="flowScope.steelDetailsServiceResponse" />
 <transition to="exit" />
 </action-state>

 <end-state id="exit">
 <output name="steelDetailsServiceResponse" />
 </end-state>
</flow>