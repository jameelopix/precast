<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:jpa="http://www.springframework.org/schema/data/jpa"
	xmlns:flow="http://www.springframework.org/schema/webflow-config"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd
  	http://www.springframework.org/schema/beans   	http://www.springframework.org/schema/beans/spring-beans.xsd
  	http://www.springframework.org/schema/tx    http://www.springframework.org/schema/tx/spring-tx.xsd
  	http://www.springframework.org/schema/util  	http://www.springframework.org/schema/util/spring-util.xsd
 	http://www.springframework.org/schema/context   	http://www.springframework.org/schema/context/spring-context.xsd
    http://www.springframework.org/schema/webflow-config    http://www.springframework.org/schema/webflow-config/spring-webflow-config.xsd">


	<bean id="conversionService"
		class="org.springframework.context.support.ConversionServiceFactoryBean">
		<property name="converters">
			<list>
				<ref bean="castingActivityGenericConvertor" />
				<ref bean="elementGenericConvertor" />
				<ref bean="elementTypeGenericConvertor" />
				<ref bean="labourActivityGenericConvertor" />
				<ref bean="labourRateGenericConvertor" />
				<ref bean="mixtureGenericConvertor" />
				<ref bean="mixtureItemGenericConvertor" />
				<ref bean="projectGenericConvertor" />
				<ref bean="rawMaterialGenericConvertor" />
				<ref bean="steelItemGenericConvertor" />
				<ref bean="subContractorGenericConvertor" />
				<ref bean="companyGenericConvertor" />
				<ref bean="bankAccountGenericConvertor" />
			</list>
		</property>
	</bean>

	<!-- GenericConvertor -->
	<bean id="castingActivityGenericConvertor"
		class="com.vme.precast.castingactivity.impl.CastingActivityGenericConvertor" />
	<bean id="elementGenericConvertor"
		class="com.vme.precast.element.impl.ElementGenericConvertor" />
	<bean id="elementTypeGenericConvertor"
		class="com.vme.precast.elementtype.impl.ElementTypeGenericConvertor" />
	<bean id="labourActivityGenericConvertor"
		class="com.vme.precast.labouractivity.impl.LabourActivityGenericConvertor" />
	<bean id="labourRateGenericConvertor"
		class="com.vme.precast.labourrate.impl.LabourRateGenericConvertor" />
	<bean id="mixtureGenericConvertor"
		class="com.vme.precast.mixture.impl.MixtureGenericConvertor" />
	<bean id="mixtureItemGenericConvertor"
		class="com.vme.precast.mixtureitem.impl.MixtureItemGenericConvertor" />
	<bean id="projectGenericConvertor"
		class="com.vme.precast.project.impl.ProjectGenericConvertor" />
	<bean id="rawMaterialGenericConvertor"
		class="com.vme.precast.rawmaterial.impl.RawMaterialGenericConvertor" />
	<bean id="steelItemGenericConvertor"
		class="com.vme.precast.steelitem.impl.SteelItemGenericConvertor" />
	<bean id="subContractorGenericConvertor"
		class="com.vme.precast.subcontractor.impl.SubContractorGenericConvertor" />
	<bean id="companyGenericConvertor"
		class="com.vme.precast.company.impl.CompanyGenericConvertor" />
	<bean id="bankAccountGenericConvertor"
		class="com.vme.precast.bankaccount.impl.BankAccountGenericConvertor" />

	<!-- ServiceImpl -->
	<bean id="castingActivityService"
		class="com.vme.precast.castingactivity.impl.CastingActivityServiceImpl" />
	<bean id="labourActivityService"
		class="com.vme.precast.labouractivity.impl.LabourActivityServiceImpl" />
	<bean id="labourRateService"
		class="com.vme.precast.labourrate.impl.LabourRateServiceImpl" />
	<bean id="mixtureService"
		class="com.vme.precast.mixture.impl.MixtureServiceImpl" />
	<bean id="mixtureItemService"
		class="com.vme.precast.mixtureitem.impl.MixtureItemServiceImpl" />
	<bean id="steelItemService"
		class="com.vme.precast.steelitem.impl.SteelItemServiceImpl" />

	<bean id="baseServiceImpl"
		class="coliseum.service.BaseServiceImpl" />

	<bean id="defaultFlowExecutionListener"
		class="coliseum.service.DefaultFlowExecutionListener" />

	<bean id="endValidation"
		class="coliseum.service.ValidationFinalizer" />

	<flow:flow-executor id="flowExecutor"
		flow-registry="flowRegistry">
		<flow:flow-execution-listeners>
			<flow:listener ref="defaultFlowExecutionListener" />
		</flow:flow-execution-listeners>
	</flow:flow-executor>

	<flow:flow-registry id="flowRegistry">
		<flow:flow-location-pattern
			value="classpath*:/**/process/*_flow.xml" />
	</flow:flow-registry>
</beans>